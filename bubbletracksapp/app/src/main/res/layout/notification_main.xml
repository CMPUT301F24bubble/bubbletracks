<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_event"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_margin="8dp"/>
            <TextView
                android:id="@+id/rounded_textview"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="NOTIFY ATTENDEES"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/home_blue"
                android:textSize="30dp"
                android:background="@drawable/round_event"
                android:padding="8dp"
                android:paddingBottom="16dp"
                android:layout_gravity="end"
                android:gravity= "center"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox_notify_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify Selected Entrants" />

        <CheckBox
            android:id="@+id/checkbox_notify_non_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify Waiting List Entrants" />

        <CheckBox
            android:id="@+id/checkbox_notify_confirmed_attendees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify Attendees (Confirmed Selected Entrants)" />

        <CheckBox
            android:id="@+id/checkbox_notify_cancelled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify Cancelled Entrants" />

<!-- Not sure if we want customizable messages but here it is for later -->
