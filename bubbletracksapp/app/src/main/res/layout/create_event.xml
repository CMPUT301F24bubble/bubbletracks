<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Event Name -->
        <EditText
            android:id="@+id/editTextEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            android:inputType="text" />

        <!-- Event Date & Time -->
        <LinearLayout
            android:id="@+id/linearLayoutEventDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonSelectDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Date and Time" />

            <TextView
                android:id="@+id/textViewEventDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Not selected"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <!-- Event Description -->
        <EditText
            android:id="@+id/editTextEventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginTop="16dp" />

        <!-- Event Location -->
        <Button
            android:id="@+id/buttonSelectLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Location"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location not set"
            android:layout_marginTop="8dp" />

        <!-- Registration Open Date -->
        <Button
            android:id="@+id/buttonSelectRegistrationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Registration Date"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewRegistrationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not selected"
            android:layout_marginTop="8dp" />

        <!-- Registration Close Date -->
        <Button
            android:id="@+id/buttonSelectCloseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Close Date"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewCloseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not selected"
            android:layout_marginTop="8dp" />

        <!-- Maximum Capacity -->
        <EditText
            android:id="@+id/editTextMaxCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Max Capacity"
            android:inputType="number"
            android:layout_marginTop="16dp" />

        <!-- Price -->
        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmitEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Event"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>