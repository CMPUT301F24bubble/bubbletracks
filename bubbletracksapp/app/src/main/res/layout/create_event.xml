<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!--edit text to enter event name-->
        <EditText
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            android:inputType="text" />

        <LinearLayout
            android:id="@+id/layoutDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!--button to open a dialogue to select date and time-->
            <Button
                android:id="@+id/buttonDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Date and Time" />

            <!--text view to show the selected date and time-->
            <TextView
                android:id="@+id/textDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/not_selected"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

        </LinearLayout>

        <!--edit text to enter the description-->
        <EditText
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginTop="16dp" />

        <!--button to open a dialogue to select the location-->
        <Button
            android:id="@+id/buttonLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Location"
            android:layout_marginTop="16dp" />

        <!--text view to show selected location-->
        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location not set"
            android:layout_marginTop="8dp" />

        <!--button to open a dialogue to select registration open date-->
        <Button
            android:id="@+id/buttonRegistrationOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Registration Date"
            android:layout_marginTop="16dp" />

        <!--text view to show registration open date-->
        <TextView
            android:id="@+id/textRegistrationOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_selected"
            android:layout_marginTop="8dp" />

        <!--button to open a dialogue to select registration close date-->
        <Button
            android:id="@+id/buttonRegistrationClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Close Date"
            android:layout_marginTop="16dp" />

        <!--text view to show registration close date-->
        <TextView
            android:id="@+id/textRegistrationClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not selected"
            android:layout_marginTop="8dp" />

        <!--edit text to enter the max capacity-->
        <EditText
            android:id="@+id/textMaxCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Max Capacity"
            android:inputType="number"
            android:layout_marginTop="16dp" />

        <!--edit text to enter price-->
        <EditText
            android:id="@+id/textPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="number"
            android:layout_marginTop="16dp" />

        <!--button that allows the user to upload an image from device-->
        <Button
            android:id="@+id/buttonUploadPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Photo"
            android:layout_marginTop="16dp" />

        <!--image view to show the uploaded image-->
        <ImageView
            android:id="@+id/imagePoster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Uploaded Photo"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!--button to create the event-->
        <Button
            android:id="@+id/buttonCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Event"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>