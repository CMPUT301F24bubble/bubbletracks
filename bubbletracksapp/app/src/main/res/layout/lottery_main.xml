<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_event"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:layout_margin="8dp"/>
            <TextView
                android:id="@+id/rounded_textview"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ATTENDEES"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:background="@drawable/round_event"
                android:padding="8dp"
                android:layout_gravity="end"
                android:gravity= "center"/>
        </LinearLayout>


        <TextView
            android:id="@+id/waitListDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wait List For Brandi Carlile Concert"
            android:textStyle="bold"
            android:paddingVertical="8dp"/>

        <ListView
            android:id="@+id/reusable_list_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:layout_marginVertical="8dp"/>

        <Button
            android:id="@+id/viewAttendeeMapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View attendee map"
            android:backgroundTint="#6694C0"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/chooseFromWaitlistButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose from waitlist"
                android:backgroundTint="#00FF00"
                android:textColor="#FFFFFF"/>

            <Spinner
                android:id="@+id/waitlistChooseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_event"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Updated Waitlist View (visible after drawing from waitlist) -->
        <LinearLayout
            android:id="@+id/updatedWaitlistContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <!-- Selected Attendee -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tara L."
                android:padding="8dp"
                android:background="@drawable/attendee_background"/>

            <!-- Attendee Statuses -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendee Statuses"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/attendee_status_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desmond G.\nJose B.\nAdeline Z." />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enrolled"
                        android:textColor="#00FF00"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting"
                        android:textColor="#FFA500"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting"
                        android:textColor="#FFA500"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/notifyWinnersButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify winners"
                android:layout_marginTop="16dp"
                android:backgroundTint="#AAAAAA"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/cancelledText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled"
                android:textColor="#FF0000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
