<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:backgroundTint="@color/button_dark_blue"
                android:background="@drawable/round_event"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/rounded_textview"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/round_event"
                android:backgroundTint="@color/home_blue"
                android:gravity="center"
                android:padding="8dp"
                android:text="HOSTED EVENTS"
                android:textColor="#FFFFFF"
                android:textSize="34sp" />
        </LinearLayout>


        <ListView
            android:id="@+id/reusable_list_view"
            android:layout_width="match_parent"
            android:layout_height="568dp"
            android:layout_marginVertical="8dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

    </LinearLayout>
</ScrollView>
