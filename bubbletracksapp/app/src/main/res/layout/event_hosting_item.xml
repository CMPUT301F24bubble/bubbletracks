<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- CardView for Event Information -->
    <androidx.cardview.widget.CardView
        android:id="@+id/browseEventXMLID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingStart="100dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <!-- FrameLayout to contain the event details -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!-- RelativeLayout to control positioning of ImageButtons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Horizontal LinearLayout with Image and Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                        android:id="@+id/browseEventPoster"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sushi_class" />

                    <TextView
                        android:id="@+id/browseEventDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="9dp"
                        android:background="@drawable/rounded_corners"
                        android:backgroundTint="@color/home_blue"
                        android:padding="3dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="NOV 29 - 5:00 PM"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
<!-- DEAR FUTURE GWEN, ADD IN THE DESCRIPTIONS OF THE EVENT-->
                        <TextView
                            android:id="@+id/event_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Title"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/browseEventDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item description goes here."
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/RegOpen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item description goes here."
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/RegClose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item description goes here."
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentBottom="true"
                            android:gravity="center">

                            <!-- Delete Button -->
                            <ImageButton
                                android:id="@+id/delete_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/baseline_delete_forever_24"
                                app:tint="@color/button_dark_blue" />

                            <!-- Edit Event Button -->
                            <ImageButton
                                android:id="@+id/edit_event_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/baseline_edit_calendar_24"
                                app:tint="@color/button_dark_blue" />

                            <!-- See People Button -->
                            <ImageButton
                                android:id="@+id/see_people_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/baseline_groups_24"
                                app:tint="@color/button_dark_blue" />

                            <!-- Update Poster Button -->
                            <ImageButton
                                android:id="@+id/update_poster_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:tint="@color/button_dark_blue"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/baseline_image_24"
                                android:text="Update Poster"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <!-- Date Overlay Text -->



            </RelativeLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
