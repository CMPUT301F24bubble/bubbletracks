<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"

    app:cardCornerRadius="15dp"

    app:cardBackgroundColor="@color/white">
    <!--app:cardElevation="50dp"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facility Details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Facility Name -->
        <TextView
            android:id="@+id/facility_name"
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Facility Name: Example Facility"
            android:textSize="14sp"
            android:textColor="#555555" />

        <!-- Facility ID -->
        <TextView
            android:id="@+id/facility_id"
            android:layout_below="@id/facility_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Facility ID: 12345"
            android:textSize="14sp"
            android:textColor="#555555" />

        <!-- Facility Location -->
        <TextView
            android:id="@+id/facility_location"
            android:layout_below="@id/facility_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Facility Location: Someplace"
            android:textSize="14sp"
            android:textColor="#555555" />

        <!-- Organizer -->
        <TextView
            android:id="@+id/facility_organizer"
            android:layout_below="@id/facility_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Organizer: John Doe"
            android:textSize="14sp"
            android:textColor="#555555" />

        <!-- Organized Events -->
        <TextView
            android:id="@+id/organized"
            android:layout_below="@id/facility_organizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Organized Events: Event 1, Event 2"
            android:textSize="14sp"
            android:textColor="#555555" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/delete_facility_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_delete_24"
            app:tint="@color/button_dark_blue"
            android:contentDescription="Delete facility"
            android:onClick="onDeleteFacilityClicked" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
