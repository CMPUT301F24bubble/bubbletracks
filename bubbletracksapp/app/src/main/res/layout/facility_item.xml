<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:text="Facility Details:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <!-- Facility Name -->
    <TextView
        android:id="@+id/facility_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facility Name: insert facility name here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <!-- Facility ID -->
    <TextView
        android:id="@+id/facility_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facility ID: insert facility ID here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <!-- Facility Location -->
    <TextView
        android:id="@+id/facility_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facility Location: insert facility location here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <!-- Organizer -->
    <TextView
        android:id="@+id/facility_organizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Organizer: insert organizer name here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="Organized Events:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/organized"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="4dp"
        android:paddingStart="16dp" />
    <Button
        android:id="@+id/delete_facility_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Facility"
        android:layout_marginBottom="16dp"
        android:onClick="onDeleteFacilityClicked" />


</LinearLayout>
