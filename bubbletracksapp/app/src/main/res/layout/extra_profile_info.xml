<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: insert name here"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/dialog_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User ID: Insert User ID here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/dialog_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: insert phone number here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/dialog_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: insert email here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/dialog_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Role: insert role here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Organized Events:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/organized"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="4dp"
        android:paddingStart="16dp" />


    <TextView
        android:text="Facility Details:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/facility_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facility Name: insert facility name here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/facility_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facility ID: insert facility ID here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/facility_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facility Location: insert facility location here"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/delete_facility_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Facility"
        android:layout_marginBottom="16dp"
        android:onClick="onDeleteFacilityClicked" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:onClick="dismissDialog"
        android:layout_marginTop="16dp" />
</LinearLayout>
