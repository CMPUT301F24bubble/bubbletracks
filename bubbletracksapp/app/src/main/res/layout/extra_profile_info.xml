<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Profile Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>

    <!-- Name -->
    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: John Doe"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp"/>

    <!-- User ID -->
    <TextView
        android:id="@+id/dialog_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User ID: 123456"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp"/>

    <!-- Phone Number -->
    <TextView
        android:id="@+id/dialog_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: +1 (555) 123-4567"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp"/>

    <!-- Email -->
    <TextView
        android:id="@+id/dialog_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: john.doe@example.com"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp"/>

    <!-- Role -->
    <TextView
        android:id="@+id/dialog_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Role: Event Organizer"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="16dp"/>

    <!-- Organized Events Title -->
    <TextView
        android:text="Organized Events:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <!-- Bullet-Point List of Organized Events -->
    <TextView
        android:id="@+id/organized"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="4dp"
        android:paddingStart="16dp"/>

    <!-- Close Button -->
    <Button
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:onClick="dismissDialog"
        android:layout_marginTop="16dp"/>
</LinearLayout>
